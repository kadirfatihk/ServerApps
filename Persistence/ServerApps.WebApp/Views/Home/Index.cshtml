@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Open Sans', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: #f4f4f9; /* Daha soft arka plan */
    }

    h2 {
        font-family: 'Open Sans', sans-serif; /* Open Sans fontu eklendi */
        font-size: 3.8rem; /* Başlık boyutunu biraz küçülttüm */
        font-weight: 700; /* Daha kalın yazı tipi */
        color: transparent; /* Yazıyı şeffaf yap */
        background: linear-gradient(45deg, #9b59b6, #ff9f1c); /* Mor ve turuncu geçişi dengeli yaptım */
        -webkit-background-clip: text; /* Metnin içini gradient ile doldurmak için */
        background-clip: text; /* Metnin içini gradient ile doldurmak için */
        text-transform: uppercase;
        letter-spacing: 1px; /* Harfler arasına biraz boşluk */
        margin-bottom: 20px; /* Başlık ile butonlar arasında mesafe kısaltıldı */
    }

    .btn-custom {
        font-size: 1.4rem;
        padding: 1rem 2.5rem;
        border-radius: 1.2rem;
        font-weight: 600;
        color: #444; /* Yazı rengi aynı kalacak */
        text-transform: uppercase;
        background-color: transparent; /* Arka plan şeffaf */
        border: 2px solid #9e9e9e; /* Soft gri kenarlık */
        transition: all 0.4s ease;
        min-width: 180px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge */
    }

        /* Buton Hover ve Focus Efektleri */
        .btn-custom:hover,
        .btn-custom:focus {
            border-color: #9b59b6; /* Hoverda mor kenarlık */
            background-color: #f0f4ff; /* Soft mavi arka plan */
            transform: translateY(-5px); /* Yumuşak yukarı kaydırma */
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15); /* Hoverda gölgeyi arttırma */
        }

        .btn-custom:active {
            transform: translateY(2px); /* Tıklama anında kayma */
        }

    /* Soft Renkli Butonlar */
    .btn-outline-primary {
        color: #9b59b6;
        border-color: #9b59b6;
    }

        .btn-outline-primary:hover {
            color: white;
            border-color: #9b59b6;
            background-color: #9b59b6; /* Mor buton hover rengi */
        }

    .btn-outline-warning {
        color: #ff9f1c;
        border-color: #ff9f1c;
    }

        .btn-outline-warning:hover {
            color: white;
            border-color: #ff9f1c;
            background-color: #ff9f1c; /* Turuncu buton hover rengi */
        }

    /* Sayfanın Ortasında Butonlar ve Başlık */
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    /* Footer */
    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        background: #333;
        color: #f1f1f1;
        padding: 15px 0;
        text-align: center;
        box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
    }

        footer:hover {
            background: #444;
        }

    main {
        flex-grow: 1;
        padding-bottom: 60px;
    }
</style>

<main role="main" class="pb-3">
    <div class="center-container">
        <h2>İşlem Seçin</h2>
        <div class="mt-4">
            <a asp-action="WebSite" asp-controller="WebSite" class="btn btn-outline-primary btn-custom mx-2">IIS</a>
            <a asp-action="GetTask" asp-controller="Task" class="btn btn-outline-warning btn-custom mx-2">TASK</a>
        </div>
    </div>
</main>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - ServerApps.WebApp
    </div>
</footer>
