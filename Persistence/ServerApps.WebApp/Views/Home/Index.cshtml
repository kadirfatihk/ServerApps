@{
    ViewData["Title"] = "Ana Sayfa";
    var currentCulture = ViewData["CurrentCulture"] as string ?? "en";
}

<div id="fullPageSpinner" class="spinner-overlay">
    <div class="spinner-border text-primary" role="status">
        <span class="sr-only loading-text">Loading...</span>
    </div>
</div>

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">



<main role="main" class="pb-3">
    <div class="center-container">
        <div class="circular-logo-container">
            <img src="~/img/img1.webp" alt="Sunucu ikonları" class="circular-logo" />
        </div>
        <h2>@(currentCulture == "tr" ? "işlem seçiniz" : "choose process")</h2>
        <div class="mt-4">
            <a asp-action="GetWebSites" asp-controller="WebSite" class="btn btn-outline-primary btn-custom mx-2">@((currentCulture == "tr") ? "IIS" : "IIS")</a>
            <a asp-action="GetTasks" asp-controller="Task" class="btn btn-outline-warning btn-custom mx-2">@((currentCulture == "tr") ? "GÖREV" : "TASK")</a>
            <a asp-action="GetEvents" asp-controller="Event" class="btn btn-outline-light btn-custom mx-2">@((currentCulture == "tr") ? "OLAY" : "EVENT")</a>
        </div>
    </div>
</main>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - ServerApps.WebApp
    </div>
</footer>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        function showSpinner() {
            document.getElementById('fullPageSpinner').style.display = 'flex';
        }

        function hideSpinner() {
            document.getElementById('fullPageSpinner').style.display = 'none';
        }

        function disableAllButtons() {
            document.querySelectorAll('a.btn').forEach(btn => {
                btn.classList.add('disabled');
                btn.setAttribute('aria-disabled', 'true');
                btn.style.pointerEvents = 'none';
            });
        }

        function enableAllButtons() {
            document.querySelectorAll('a.btn').forEach(btn => {
                btn.classList.remove('disabled');
                btn.removeAttribute('aria-disabled');
                btn.style.pointerEvents = '';
            });
        }

        window.addEventListener('load', () => {
            hideSpinner();
            enableAllButtons();

            // Dil seçiciyi seçili dile göre ayarla
            document.getElementById('languageSelect').value = '@currentCulture';
        });

        // Butonlara tıklanınca spinner'ı göster ve butonları disable et
        document.querySelectorAll('a.btn').forEach(btn => {
            btn.addEventListener('click', () => {
                disableAllButtons();
                showSpinner();
            });
        });

        function changeLanguage(lang) {
            const url = new URL(window.location.href);
            url.searchParams.set('culture', lang);
            window.location.href = url.toString();
        }
    </script>
}

