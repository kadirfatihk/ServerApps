@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
    }

    .btn-custom {
        font-size: 1.35rem;
        padding: 0.9rem 2.2rem;
        border-radius: 0.6rem;
        font-weight: 500;
        transition: all 0.3s ease;
        min-width: 180px; /* Sabit genişlik görünümü */
    }

        .btn-custom:hover {
            transform: scale(1.05);
        }
</style>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="text-center">
        <h2>İşlem Seçin</h2>
        <div class="mt-4">
            <a asp-action="WebSite" asp-controller="WebSite" class="btn btn-outline-primary btn-custom mx-2">IIS</a>
            <a asp-action="GetTask" asp-controller="Task" class="btn btn-outline-warning btn-custom mx-2">TASK</a>
        </div>
    </div>
</div>
