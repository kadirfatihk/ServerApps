@model List<ServerApps.Persistence.Models.User>

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>E-Mail</th>
            <th>Admin</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.EmailAddress</td>
                <td>
                    <form method="post" asp-action="UpdateAdmin" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <input type="checkbox" name="isAdmin" value="true" @(user.IsAdmin == true ? "checked" : "")
                               onchange="this.form.submit()" />
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="Delete" onsubmit="return confirm('Silmek istediğinize emin misiniz?');" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddUser" class="btn btn-success">Add New User</a>
